
#
# Run 'make test' to use this.
#

TT="./clint"
DDT="tests/dummy_tab.c"
DDS="tests/dummy_spaces.c"

TMP_FILE="tests/test_dummy.c"

echo "Starting tests..."
echo
echo

# Test 1
cp -f "$DDT" "$TMP_FILE"
"$TT" "-s" "$TMP_FILE"

out=`cat "${TMP_FILE}"`
exp="
#include <stdio.h>

int main() {
    printf(\"Test\\n\");

    return(0);
}"

if [ "$out" != "$exp" ]; then
    echo "Test failed:"
    rm -f "$TMP_FILE"
    echo "Expecting: ${exp}"
    echo "Got: ${out}"
    exit 1
fi
rm -f "$TMP_FILE"
echo "Test 1 complete!"

# Test 2
cp -f "$DDT" "$TMP_FILE"
"$TT" "--spaces=2" "$TMP_FILE"

out=`cat "$TMP_FILE"`
exp="
#include <stdio.h>

int main() {
  printf(\"Test\\n\");

  return(0);
}"

if [ "$out" != "$exp" ]; then
    echo "Test failed:"
    rm -f "$TMP_FILE"
    echo "Expected: ${exp}"
    echo "Got: ${out}"
    exit 1
fi
rm -f "$TMP_FILE"
echo "Test 2 complete!"



# Test 3
cp -f "$DDT" "$TMP_FILE"
"$TT" "--spaces=8" "$TMP_FILE"

out=`cat "$TMP_FILE"`
exp="
#include <stdio.h>

int main() {
        printf(\"Test\\n\");

        return(0);
}"

if [ "$out" != "$exp" ]; then
    echo "Test failed:"
    rm -f "$TMP_FILE"
    echo "Expected: ${exp}"
    echo "Got: ${out}"
    exit 1
fi
rm -f "$TMP_FILE"
echo "Test 3 complete!"



# Test 4
cp -f "$DDT" "$TMP_FILE"
"$TT" "--spaces=4" "$TMP_FILE"

out=`cat "$TMP_FILE"`
exp="
#include <stdio.h>

int main() {
    printf(\"Test\\n\");

    return(0);
}"

if [ "$out" != "$exp" ]; then
    echo "Test failed:"
    rm -f "$TMP_FILE"
    echo "Expected: ${exp}"
    echo "Got: ${out}"
    exit 1
fi
rm -f "$TMP_FILE"
echo "Test 4 complete!"



# Test 5
cp -f "$DDS" "$TMP_FILE"
"$TT" "-t" "--spaces=4" "$TMP_FILE"

out=`cat "$TMP_FILE"`
exp="
#include <stdio.h>

int main() {
	printf(\"Test\\n\");

	return(0);
}"

if [ "$out" != "$exp" ]; then
    echo "Test failed:"
    rm -f "$TMP_FILE"
    echo "Expected: ${exp}"
    echo "Got: ${out}"
    exit 1
fi
rm -f "$TMP_FILE"
echo "Test 5 complete!"


#
# End tests-sh
#
